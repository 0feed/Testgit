{% extends 'layouts/default.njk' %}

{% set title = site.description %}

{% block content %}
  <h1>{{ site.title }}</h1>

  <h2>Posts</h2>
  <ul>
    {% for post in collections.posts.slice(0,4) %}
      <li>
         <a href="{{ post.url }}">{{ post.title }}</a>
         {% if post.custom_excerpt %}<p>{{ post.custom_excerpt }}</p>{% endif %}
      </li>
    {% endfor %}
  </ul>
  <a href="/blog">View all posts</a>

  <h2>Pages</h2>
  <ul>
    {% for doc in collections.docs %}
      <li>
         <a href="{{ doc.url }}">{{ doc.title }}</a>
      </li>
    {% endfor %}
  </ul>

  <h2>Authors</h2>
  <ul>
    {% for author in collections.authors %}
      <li>
         <a href="{{ author.url }}">{{ author.name }}</a>
      </li>
    {% endfor %}
  </ul>

  <h2>Tags</h2>
  <ul>
    {% for tag in collections.tags %}
      <li>
         <a href="{{ tag.url }}">{{ tag.name }}</a>
      </li>
    {% endfor %}
  </ul>

{% endblock%}
